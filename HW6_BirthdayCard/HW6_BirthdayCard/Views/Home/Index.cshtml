@model HW6_BirthdayCard.Models.BirthdayCard

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>

    <h3>Send a Birthday Card</h3>
    <form asp-action="Index">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="From" class="control-label mr-sm-2">From: </label>
            <div>
                <input asp-for="From" class="form-control mr-sm-2" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="To" class="control-label mr-sm-2">To:</label>
            <div>
                <input asp-for="To" class="form-control mr-sm-2" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Message" class="control-label mr-sm-2">Message:</label>
            <div>

                <input asp-for="Message" class="form-control mr-sm-2" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Send Card" class="btn btn-success" />
        </div>
    </form>
</body>
</html>
