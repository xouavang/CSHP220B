<Window x:Class="HelloWorld.MouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="MouseWindow" Height="450" Width="800">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="uxStatus"/>
            </StatusBarItem>
        </StatusBar>
        <Canvas x:Name="uxCanvas"
            MouseMove="uxCanvas_MouseMove" 
            MouseDown="uxCanvas_MouseDown"
            MouseUp="uxCanvas_MouseUp"
            Background="Transparent"></Canvas>
    </DockPanel>
</Window>
