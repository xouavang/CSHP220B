<Window x:Class="HelloWorld.ResourceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="{StaticResource ApplicationName}" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="uxName" Style="{StaticResource xInput}" />
        <TextBox x:Name="uxPassword" Style="{StaticResource xPasswordInput}"/>
    </StackPanel>
</Window>
