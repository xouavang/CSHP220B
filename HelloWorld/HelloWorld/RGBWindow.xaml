<Window x:Class="HelloWorld.RGBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="RGBWindow" Height="450" Width="800">
    <StackPanel>
        <local:RGBControl></local:RGBControl>
        <TextBlock>Enter a number (0-9):</TextBlock>
        <local:NumberControl x:Name="uxNumber" />
        <Button x:Name="uxSubmit" Click="uxSubmit_Click">Submit</Button>
    </StackPanel>
</Window>
